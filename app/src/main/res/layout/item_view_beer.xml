<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_marginBottom="2dp"
    android:layout_height="100dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/img_beer">
    </ImageView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/img_beer"
        android:layout_toEndOf="@+id/img_beer"
        android:layout_toStartOf="@+id/ic_arrow_right"
        android:layout_toLeftOf="@+id/ic_arrow_right"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_name"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="AB: 01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/txt_description"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/txt_name"
            android:text="Vanilla Bean infused Belgian Quad" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/ic_arrow_right"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_keyboard_arrow_right" />


</RelativeLayout>